<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rmutsv.alisa.yusuf.mynavigater.DetailActivity">


    <!--ToolBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolberTop"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--Title-->
            <TextView
                android:textColor="@color/TextcolorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:text="Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/linBotton"
                android:layout_marginEnd="30dp" />

            <!--Group Icon-->
            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/linBotton"
                android:padding="@dimen/padding"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <!--Delete-->
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--Icon Start-->
                    <ImageView
                        android:id="@+id/imvDelete"
                        android:src="@mipmap/ic_deletee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/TextcolorPrimary"
                        android:text="Delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--Edit-->
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--Icon Start-->
                    <ImageView
                        android:id="@+id/imvEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_editttt" />

                    <TextView
                        android:textColor="@color/TextcolorPrimary"
                        android:text="Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--GoToLocation-->
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--Icon Start-->
                    <ImageView
                        android:id="@+id/imvGotoLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_marker" />

                    <TextView
                        android:textColor="@color/TextcolorPrimary"
                        android:text="Your Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>



            <!--Icon Back-->
            <ImageView
                android:id="@+id/imvBack"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




    </android.support.v7.widget.Toolbar>

    <!--Content-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolberTop"
        android:layout_alignParentStart="true">

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/maigin"
            android:layout_marginTop="@dimen/maigin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtShowName"
                android:textSize="@dimen/h2"
                android:textColor="@color/colorPrimaryDark"
                android:text="testName"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Date-->
        <LinearLayout
            android:layout_marginLeft="@dimen/maigin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/h2"
                android:text="Date :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="21/07/2017"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/h2" />

        </LinearLayout>

        <!--Distance-->
        <LinearLayout
            android:layout_marginBottom="@dimen/maigin"
            android:layout_marginLeft="@dimen/maigin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:text="Distance :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/h2" />

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:text="123 Km. :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/h2" />

        </LinearLayout>


        <!--Aboyt Map-->
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="rmutsv.alisa.yusuf.mynavigater.DetailActivity" />

    </LinearLayout>

    <!--FoodBar-->


</RelativeLayout>











